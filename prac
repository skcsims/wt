const server = http.createServer((req, res) => {
  if (req.url === '/') {
    res.writeHead(200, { 'Content-Type': 'text/html' });
    res.write(`
      <html>
      <head>
        <style>
          ul li {
            display: inline-block;
            float: right;
            height: 40px;
          }
          ul li a {
            padding: 20px;
