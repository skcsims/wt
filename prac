const mysql = require("mysql2");

const con = mysql.createConnection({
  host: "localhost",
  user: "root",
  password: "shreyash"
});

con.connect((err) => {
  if (err) throw err;
  console.log("Connected to MySQL");

  con.query("CREATE DATABASE IF NOT EXISTS students4", (err) => {
    if (err) throw err;
    console.log("Database created");

    con.changeUser({ database: "students4" }, (err) => {
      if (err) throw err;

      const sql = `
        CREATE TABLE IF NOT EXISTS student1 (
          id INT AUTO_INCREMENT PRIMARY KEY,
          name VARCHAR(255),
          address VARCHAR(255),
          course VARCHAR(50),
          contact VARCHAR(15)
        )
      `;

      con.query(sql, (err) => {
        if (err) throw err;
        console.log("Student table created");
        con.end();
      });
    });
  });
});

