import React, { useState } from "react";

function App() {
  const [keyPressed, setKeyPressed] = useState("");

  const handleKeyUp = (event) => {
    setKeyPressed(event.key);
  };
  return (
    <div style={{ padding: "20px", textAlign: "center" }}>
      <h1>React onKeyUp Event Demo</h1>
      <p>Type something in the input box below and release a key to see the last key pressed.</p>
      <div style={{ marginBottom: "20px" }}>
        <input
          type="text"
          onKeyUp={handleKeyUp}
          placeholder="Type something and release a key"
          style={{
            padding: "10px",
            width: "300px",
            border: "1px solid #ccc",
            borderRadius: "5px",
            fontSize: "16px",
          }}
        />
      </div>
      <p style={{ fontSize: "20px", color: "#333" }}>
        <strong>Last key pressed: </strong>
        {keyPressed}
      </p>
    </div>
  );
}

