b) ERP Program

 
 

erp.js
console.log("Name: Shreyash Utekar 126");

var http = require('http');

var server = http.createServer(function (req, res) {

    // DASHBOARD
    if (req.url == '/') {
        res.writeHead(200, { 'Content-Type': 'text/html' });
        res.write('<html><head>');
        res.write('<style>');
        res.write('body{font-family:Arial;} ul li{display:inline-block; margin:10px;}');
        res.write('a{padding:15px; background:teal; color:white; text-decoration:none;}');
        res.write('</style>');
        res.write('</head><body>');
        res.write('<h1 align="center">ERP DASHBOARD</h1>');
        res.write('<h3 align="center">Shreyash Utekar (Roll No: 126)</h3>');
        res.write('<ul>');
        res.write('<li><a href="/student">Student Module</a></li>');
        res.write('<li><a href="/faculty">Faculty Module</a></li>');
        res.write('<li><a href="/admin">Admin Module</a></li>');
        res.write('</ul>');
        res.write('</body></html>');
        res.end();
    }

    // STUDENT MODULE
    else if (req.url == '/student') {
        res.writeHead(200, { 'Content-Type': 'text/html' });
        res.write('<html><body bgcolor="lightpink">');
        res.write('<h1>Student ERP Module</h1>');
        res.write('<p>Name : Shreyash Utekar</p>');
        res.write('<p>Roll No : 92</p>');
        res.write('<p>Course : MCA</p>');
        res.write('<p>Attendance : 85%</p>');
        res.write('<a href="/">Back to Dashboard</a>');
        res.write('</body></html>');
        res.end();
    }

    // FACULTY MODULE
    else if (req.url == '/faculty') {
        res.writeHead(200, { 'Content-Type': 'text/html' });
        res.write('<html><body bgcolor="lightyellow">');
        res.write('<h1>Faculty ERP Module</h1>');
        res.write('<p>Faculty Name : ____________</p>');
        res.write('<p>Subject : Web Technology</p>');
        res.write('<p>Department : MCA</p>');
        res.write('<p>Lecture Hours : 4 hrs/day</p>');
        res.write('<a href="/">Back to Dashboard</a>');
        res.write('</body></html>');
        res.end();
    }

    // ADMIN MODULE
    else if (req.url == '/admin') {
        res.writeHead(200, { 'Content-Type': 'text/html' });
        res.write('<html><body bgcolor="lightblue">');
        res.write('<h1>Admin ERP Module</h1>');
        res.write('<form>');
        res.write('Username:<br><input type="text"><br>');
        res.write('Password:<br><input type="password"><br><br>');
        res.write('<button onclick="alert(\'Login Successful\')">LOGIN</button>');
        res.write('</form>');
        res.write('<br><a href="/">Back to Dashboard</a>');
        res.write('</body></html>');
        res.end();
    }

    else {
        res.end('Invalid Request');
    }
});

server.listen(8000);
console.log('ERP Server running on port 8000');

